<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ua.classroom.TeacherMenuActivity">


    <Button
        android:id="@+id/Button_pools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pools"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Button_absentees" />

    <Button
        android:id="@+id/Button_list_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_students"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/classeName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/Button_absentees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/absentees"
        android:layout_marginEnd="40dp"
        android:layout_alignBaseline="@+id/Button_list_students"
        android:layout_alignBottom="@+id/Button_list_students"
        android:layout_toStartOf="@+id/classeName" />

    <Button
        android:id="@+id/Button_delete_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_class"
        android:layout_below="@+id/Button_pools"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <Button
        android:id="@+id/write_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_nfc"
        android:layout_alignBaseline="@+id/Button_pools"
        android:layout_alignBottom="@+id/Button_pools"
        android:layout_toEndOf="@+id/Button_delete_class" />

    <TextView
        android:id="@+id/classeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="" />


</RelativeLayout>
