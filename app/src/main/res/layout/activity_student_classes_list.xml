<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ua.classroom.StudentClassesList">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/list_of_attending_classes"/>

    <fragment
        android:id="@+id/fragmentStudentClassesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="pt.ua.classroom.StudentClassesListFragment"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="38dp"
        tools:layout="@layout/fragment_student_classes_list"
        android:layout_below="@+id/textView2" />

</RelativeLayout>