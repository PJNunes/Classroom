<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ua.classroom.TeacherActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/list_of_pools"
        android:textSize="18sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/fragmentPoolList"
        android:name="pt.ua.classroom.TeacherPoolListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/new_pool"
        tools:layout="@layout/fragment_teacher_pool_list" />

    <Button
        android:id="@+id/new_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_pool"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
